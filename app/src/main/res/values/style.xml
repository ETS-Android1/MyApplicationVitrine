<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DigitBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/gris</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="DigitImBtnStyle">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gris</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="DigitTxtTitreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">casual</item>
    </style>


    <style name="DigitTxtContactStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DigitTxtTableTitreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/cell_shape_color_gris_pastel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="TableColumStyle0">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:text">@string/nom_produit</item>

    </style>

    <style name="TableColumStyle1">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>

    </style>

</resources>